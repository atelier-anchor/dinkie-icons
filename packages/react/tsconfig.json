    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "scripts/**/*",
    "src/**/*"
  ]
}